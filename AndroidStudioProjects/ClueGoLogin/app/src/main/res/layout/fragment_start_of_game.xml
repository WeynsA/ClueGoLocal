<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGameFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_startgame"
            android:layout_width="332dp"
            android:layout_height="184dp"
            android:src="@drawable/beginicon" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/newGame" />


        <Button
            android:id="@+id/btn_puzzle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puzzle"
            android:onClick="startPuzzle"/>

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:text=""
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_server_info"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_view_instructions"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/instruction"
            android:textSize="25sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>


    </LinearLayout>

</FrameLayout>